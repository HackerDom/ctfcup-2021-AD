@model CtfLand.Service.Models.LoginRequestModel

@{
    ViewData["Title"] = "Войти";
}

<h2 class="title">Войти</h2>
<section class="login-block">
    <form asp-action="Login" asp-controller="Auth" asp-anti-forgery="true" method="post">
        <div class="validation alert alert-danger" asp-validation-summary="ModelOnly"></div>
        <section>
            <div class="form-group">
                <label asp-for="Login">Введите логин</label>
                <input type="text" asp-for="Login" class="form-control"/>
                <span class="invalid-feedback" asp-validation-for="Login"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Введите пароль</label>
                <input asp-for="Password" class="form-control"/>
                <span class="invalid-feedback" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-primary"/>
            </div>
        </section>
    </form>
</section>
