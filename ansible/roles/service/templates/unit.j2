#jinja2: lstrip_blocks: "True"
[Unit]
    Description=CupCTF 2020: {{ service_name }}
    After=network-online.target docker.service
    Wants=network-online.target docker.service
    Requires=docker.service

[Service]
    ExecStart=/home/ctfcup/{{ service_name }}/run.sh
    WorkingDirectory=/home/ctfcup/{{ service_name }}
    User=ctfcup
    Group=ctfcup
    Restart=on-failure
    StartLimitBurst=3
    StartLimitInterval=60s
[Install]
    WantedBy=multi-user.target
